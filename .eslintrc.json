{
  "root": true,
  "env": {
    "es2022": true,
    "node": true,
    "jest": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "project": [
      "./tsconfig.eslint.json"
    ],
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "rules": {
    "block-spacing": "error",
    "space-infix-ops": "error",
    "no-param-reassign": 0
  },
  "plugins": [ "@typescript-eslint", "prettier" ],
  "extends": [
    "airbnb",
    "airbnb-typescript",
    "plugin:@typescript-eslint/recommended",
    "plugin:import/recommended",
    "plugin:import/typescript"
  ],  
  "ignorePatterns": [
    ".eslintrc.js", 
    "dist", 
    "node_modules", 
    "webpack.config.js"
  ]
}